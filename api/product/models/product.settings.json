{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "availability": {
      "type": "boolean",
      "required": true
    },
    "mainPhoto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "miniMainPhoto": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "additionalPhoto": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "categories": {
      "type": "enumeration",
      "enum": [
        "sets",
        "panno",
        "doski",
        "srezi",
        "solfetnizi",
        "eggs",
        "matreshki",
        "another"
      ],
      "default": "another",
      "required": true
    },
    "fixation": {
      "type": "enumeration",
      "enum": [
        "verevka",
        "magnit",
        "wholes",
        "another"
      ],
      "required": true,
      "default": "another"
    },
    "prints": {
      "type": "enumeration",
      "enum": [
        "petrikovka",
        "hohloma",
        "gzel",
        "another"
      ],
      "required": true,
      "default": "another"
    }
  }
}
